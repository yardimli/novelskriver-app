{
  "name": "novelskriver-electron",
  "version": "0.1.1",
  "description": "A standalone novel writing application.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "build": "tailwindcss -i ./src/css/input.css -o ./public/styles.css",
    "start": "npm run build && electron .",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./public/styles.css --watch",
    "watch:electron": "nodemon --watch main.js --watch src/ --exec \"electron .\"",
    "dev": "concurrently \"npm:watch:css\" \"npm:watch:electron\"",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^37.2.0",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "node-fetch": "^2.7.0",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.4.1",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-model": "^1.25.3",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.40.1"
  }
}
